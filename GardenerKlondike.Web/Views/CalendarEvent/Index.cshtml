@model IEnumerable<GardenerKlondike.Web.Models.CalendarEventViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="tab-main-header">Events</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Start)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThemeColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFullDay)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.Raw(Server.HtmlDecode(item.Description))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Start)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.End)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThemeColor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsFullDay)
        </td>
        <td>
            <div class="btn-group" role="group" aria-label="Basic example">
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                @Html.ActionLink("Delete", "Delete", new {id = item.Id}, new
                {
                    @class = "btn btn-danger",
                    onclick = "return confirm('Are you sure you wish to delete this Event?');"
                })
            </div>
        </td>
    </tr>
}

</table>
